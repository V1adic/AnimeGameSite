@{
    ViewData["Title"] = "Контакты";
}

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-[#0A0014] to-[#1A0C2D] px-4 overflow-hidden">
    <!-- Фоновое изображение -->
    <div class="absolute inset-0 z-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/MainPage/cosmos3.jpg');"></div>
    <div class="overlay bg-black bg-opacity-70 absolute inset-0 z-0"></div>

    <div class="section-content relative z-10 max-w-5xl mx-auto px-6 py-20 w-full">
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 drop-shadow-[0_2px_6px_rgba(111,66,193,0.6)]">
                Свяжитесь с нами
            </h1>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto">
                Мы всегда готовы к общению и обратной связи. Не стесняйся — напиши!
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 bg-white bg-opacity-5 backdrop-blur-md p-8 rounded-2xl border border-white/10 shadow-[0_0_25px_rgba(111,66,193,0.15)]">
            <div class="space-y-6">
                <div class="flex items-center gap-4">
                    <i class="ri-telegram-line text-2xl text-oceanBlue"></i>
                    <div>
                        <p class="text-gray-400 text-sm">Телефон</p>
                        <a href="https://t.me/dns_official_store" class="text-white hover:text-secondary font-medium">Личные сообщения</a>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <i class="ri-mail-line text-2xl text-oceanBlue"></i>
                    <div>
                        <p class="text-gray-400 text-sm">Электронная почта</p>
                        <a href="mailto:quietplanetgame@gmail.com" class="text-white hover:text-secondary font-medium">quietplanetgame@gmail.com</a>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="flex items-center gap-4">
                    <i class="ri-telegram-line text-2xl text-oceanBlue"></i>
                    <div>
                        <p class="text-gray-400 text-sm">Telegram</p>
                        <a href="https://t.me/quiet_planet_game" target="_blank" class="text-white hover:text-secondary font-medium">Канал</a>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <i class="ri-vk-line text-2xl text-oceanBlue"></i>
                    <div>
                        <p class="text-gray-400 text-sm">ВКонтакте</p>
                        <a href="https://vk.com/quiet_planet" target="_blank" class="text-white hover:text-secondary font-medium">Группа</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-16 text-center text-xl text-white italic blurred-text px-6 py-4 rounded-xl bg-black bg-opacity-30 shadow-inner border border-white/10">
            Мы рядом, если что ❤️ Просто напиши — мы ответим как можно скорее.
        </div>
    </div>
</section>